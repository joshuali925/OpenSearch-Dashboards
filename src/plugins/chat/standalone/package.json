{
  "name": "@osd/chat-standalone",
  "version": "1.0.0",
  "description": "Standalone chat application extracted from OpenSearch Dashboards chat plugin",
  "private": true,
  "scripts": {
    "dev:client": "vite --host 0.0.0.0",
    "dev:server": "tsx watch server/index.ts",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:client && npm run build:server",
    "start": "node dist/server/index.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "react": "^16.14.0",
    "react-dom": "^16.12.0",
    "rxjs": "^6.5.5",
    "@opensearch-project/oui": "^1.21.0",
    "@elastic/charts": "^31.1.0",
    "react-markdown": "^5.0.3",
    "react-use": "^17.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.4.2",
    "@types/react": "^16.14.0",
    "@types/react-dom": "^16.9.0",
    "@vitejs/plugin-react": "^4.0.3",
    "vite": "^4.4.9",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "sass": "^1.64.1",
    "concurrently": "^8.2.0"
  }
}
