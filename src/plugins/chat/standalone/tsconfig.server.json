{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist/server",
    "rootDir": "./server",
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Path mappings */
    "baseUrl": ".",
    "paths": {
      "@chat-plugin/*": ["../*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}
